class Solution {
public:
    void dfs(TreeNode* root, int max, int& count) {
        if (!root)
            return;
        if (root->val >= max) {
            count++;
            max = root->val;
        }
        dfs(root->left, max, count);
        dfs(root->right, max, count);
    }
    int goodNodes(TreeNode* root) {
        if (!root)
            return 0;
        int count = 0;
        dfs(root, root->val, count);
        return count;
    }
};
