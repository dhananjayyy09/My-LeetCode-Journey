class Solution {
public:
    int dfs(TreeNode* node, int curr) {
        if (!node)
            return 0;
        curr = curr * 2 + node->val;

        if (!node->left && !node->right)
            return curr;

        int l = dfs(node->left, curr);
        int r = dfs(node->right, curr);

        return l + r;
    }

    int sumRootToLeaf(TreeNode* root) {
         return dfs(root, 0);
    }
};
