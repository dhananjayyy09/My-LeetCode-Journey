class Solution {
public:
    int count = 0;
    pair<int, int> dfs(TreeNode* root) {
        if (root == 0)
            return {0,0};
        auto left = dfs(root->left);
        auto right = dfs(root->right);
        int sum = left.first + right.first + root->val;
        int tcount = left.second + right.second + 1;
        int avg = sum / tcount;
        if(root->val == avg){
            count++;
        }
        return {sum,tcount};
    }
    int averageOfSubtree(TreeNode* root) {
        dfs(root);
        return count;
    }
};
