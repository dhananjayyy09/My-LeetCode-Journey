class Solution {
public:
    int maxDiameter = 0;
    int solve(TreeNode* root){
        if(!root) return 0;
        
        int left = solve(root->left);
        int right = solve(root->right);
        maxDiameter = max(maxDiameter, left + right);

        return 1 + max(left, right);
    }

    int diameterOfBinaryTree(TreeNode* root) {
        solve(root);
        return maxDiameter;
    }
};
