class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
        int length = 0;
        ListNode* temp = head;
        while (temp) {
            length++;
            temp = temp->next;
        }
        
        if(n == length){
            ListNode* del = head;
            head = head->next;
            delete del;
            return head;
        }

        int steps = length - n - 1;
        temp = head;
        for (int i = 0; i < steps; i++) {
            temp = temp->next;
        }
        ListNode* del = temp->next;
        temp->next = del->next;
        delete del;
        return head;
    }
};
