class Solution {
public:
    Node* copyRandomList(Node* head) {
        if(!head) return NULL;
        Node* curr = head;

        //clone each and insert after original
        while(curr){
            Node* copy = new Node(curr->val);
            copy->next = curr->next;
            curr->next = copy;
            curr = copy->next;
        }

        //assign random pointer for copies
        curr = head;
        while(curr){
            if(curr->random){
                curr->next->random = curr->random->next;
            }
            curr = curr->next->next;
        }

        //sperate copy & original
        curr = head;
        Node* copyhead = head->next;
        while(curr){
            Node* copy = curr->next;
            curr->next = copy->next;
            if(copy->next){
                copy->next = copy->next->next;
            }
            curr = curr->next;
        }
        return copyhead;
    }
};
