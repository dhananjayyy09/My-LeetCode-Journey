class Solution {
public:
    ListNode* modifiedList(vector<int>& nums, ListNode* head) {
        if(!head) return NULL;
        unordered_set<int> remove(nums.begin(), nums.end());

        ListNode dummy(0);
        dummy.next = head;
        ListNode* prev = &dummy;
        ListNode* curr = head;

        while(curr){
            if(remove.count(curr->val)){
                prev->next = curr->next;
                curr = curr->next;
            }
            else{
                prev = curr;
                curr = curr->next;
            }
            curr = prev->next;
        }
        return dummy.next;
    }
};
