class Solution {
public:
    int maxArea(vector<int>& height) {
        int left = 0;
        int right = height.size()-1;
        int maxarea = -1e9;
        while(left < right){
            int l = right - left;
            int h = min(height[left], height[right]);
            int area = l * h;
            maxarea = max(area,maxarea);
            if(height[left] < height[right]){
                left++;
            }
            else{
                right--;
            }
        }
        return maxarea;
    }
};
