class Solution {
public:
    int minCost(string colors, vector<int>& neededTime) {
        int n = colors.size();
        int prevMax = neededTime[0];
        int time = 0;
        for(int i = 1; i < n; i++){
            int curr = neededTime[i];
            if(colors[i] == colors[i-1]){
                time += min(curr, prevMax);
                prevMax = max(prevMax, curr);
            } 
            else prevMax = neededTime[i];
        }
        return time;
    }
};
