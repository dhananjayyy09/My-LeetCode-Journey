class Solution {
public:
    int minElements(vector<int>& nums, int limit, int goal) {
        long long sum = 0;
        for(auto i : nums){
            sum += i;
        }
        long long diff = goal - sum;
        if(diff == 0) return 0;
        return (long long) (abs(diff) + limit - 1)/ limit;
    }
};
