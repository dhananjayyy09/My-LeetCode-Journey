class Solution {
public:
    int buyChoco(vector<int>& prices, int money) {
        int n = prices.size();
        int mini1 = 1e9, mini2 = 1e9;
        for(int i=0; i<n; i++){
            if(prices[i] < mini1){
                mini2 = mini1;
                mini1 = prices[i];
            }
            else if(prices[i] < mini2){
                mini2 = prices[i];
            }
        }
        int leftOver = money - (mini1 + mini2);
        return leftOver >= 0 ? leftOver : money;
    }
};
