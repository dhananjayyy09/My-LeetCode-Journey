class Solution {
public:
    int minimumBoxes(vector<int>& apple, vector<int>& capacity) {
        int apples = 0;
        for(auto &it : apple){
            apples += it;
        }
        int count = 0;
        sort(capacity.rbegin(), capacity.rend());
        while(apples > 0){
            apples -= capacity[count++];
        }
        return count;
    }
};
