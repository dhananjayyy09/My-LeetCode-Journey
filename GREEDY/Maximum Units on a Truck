class Solution {
public:
    int maximumUnits(vector<vector<int>>& boxTypes, int truckSize) {
        sort(boxTypes.begin(), boxTypes.end(), [](auto &a, auto &b) {
            return a[1] > b[1];
        });

        int units = 0;
        for(auto i : boxTypes){
            int boxes = min(i[0], truckSize);
            units += (boxes * i[1]);
            truckSize -= boxes;

            if(truckSize == 0) break;
        }
        return units;
    }
};
