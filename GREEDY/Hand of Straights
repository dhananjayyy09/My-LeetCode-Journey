class Solution {
public:
    bool isNStraightHand(vector<int>& hand, int groupSize) {
        if (hand.size() % groupSize != 0)
            return false;

        map<int, int> count;
        for (int card : hand)
            count[card]++;

        for (auto& [num, freq] : count) {
            if (freq > 0) {
                for (int i = 1; i < groupSize; ++i) {
                    if (count[num + i] < freq)
                        return false;
                    count[num + i] -= freq;
                }
            }
        }

        return true;
    }
};
