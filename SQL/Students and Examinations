SELECT 
    ss.student_id,
    ss.student_name,
    sb.subject_name,
    COUNT(e.subject_name) AS attended_exams
FROM 
    Students ss
CROSS JOIN 
    Subjects sb
LEFT JOIN 
    Examinations e 
    ON ss.student_id = e.student_id AND sb.subject_name = e.subject_name
GROUP BY 
    ss.student_id, ss.student_name, sb.subject_name
ORDER BY 
    ss.student_id, sb.subject_name;
