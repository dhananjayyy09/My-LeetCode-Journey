class Solution {
public:
    vector<int> sortByBits(vector<int>& arr) {
        int n = arr.size();
        vector<pair<int, int>> sorted;
        for(int i = 0; i < n; i++){
            sorted.push_back({__builtin_popcount(arr[i]), arr[i]});
        }
        sort(sorted.begin(), sorted.end());
        vector<int> ans;
        for(int i = 0; i < n; i++){
            ans.push_back(sorted[i].second);
        }
        return ans;
    }
};
