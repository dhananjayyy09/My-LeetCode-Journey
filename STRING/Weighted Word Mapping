class Solution {
public:
    string mapWordWeights(vector<string>& words, vector<int>& weights) {
        int n = words.size();
        string ans = "";
        for(int i=0; i<n; i++){
            int cost = 0;
            for(char c : words[i]){
                int alpha = c - 'a';
                cost += weights[alpha];
            }
            char mapped = 'z' - (cost % 26);
            ans += mapped;
        }
        return ans;
    }
};
