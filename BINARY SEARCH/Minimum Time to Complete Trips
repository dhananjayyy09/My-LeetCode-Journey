class Solution {
public:
    long long minimumTime(vector<int>& time, int totalTrips) {
        long long min = *min_element(time.begin(), time.end());
        long long max = min * totalTrips;
        while (min < max) {
            long long mid = min + (max - min) / 2;
            long long trip = 0;
            for (int t : time) {
                trip += mid / t;
            }
            if (trip >= totalTrips) {
                max = mid;
            } else {
                min = mid + 1;
            }
        }
        return min;
    }
};s
