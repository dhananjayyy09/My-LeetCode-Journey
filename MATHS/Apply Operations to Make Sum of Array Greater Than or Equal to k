class Solution {
public:
    int minOperations(int k) {
        if(k == 1) return 0;
        int minOps = 1e9;
        for(int i = 2; i <= k; i++){
            int ops = i-1;
            if(k % i == 0) {
                ops += (k/i) - 1;
            } else {
                ops += k/i;
            }
            minOps = min(minOps, ops);
        }
        return minOps;
    }
};
