class Solution {
public:
    bool isAnagram(string s, string t) {
        if (s.size() != t.size())
            return false;
        unordered_map<char, int> freq;
        for (char c : s) {
            freq[c]++;
        }
        for (char it : t) {
            if (freq.find(it) == freq.end())
                return false;
            if (--freq[it] < 0)
                return false;
        }
        return true;
    }
};
