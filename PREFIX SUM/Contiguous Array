class Solution {
public:
    int findMaxLength(vector<int>& nums) {
        int n = nums.size();
        unordered_map<int, int> mp;
        mp[0] = -1;
        int maxLen = 0;
        int sum = 0;
        for(int i = 0; i < n; i++){
            sum += (nums[i] == 0) ? -1 : 1;
            if(mp.count(sum)){
                maxLen = max(maxLen, i - mp[sum]);
            }
            else mp[sum] = i;
        }
        return maxLen;
    }
};
