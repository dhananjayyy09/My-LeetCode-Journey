class Solution {
public:
    int solve(int i, vector<int> &dp){
        if(i == 0) return 0;
        if(i == 1 || i == 2) return 1;
        if(dp[i] != -1) return dp[i];
        return dp[i] = solve(i-1, dp) + solve(i-2, dp) + solve(i-3, dp);
    }

    int tribonacci(int n) {
        vector<int> dp(n+1, -1);
        return solve(n, dp);
    }
};
