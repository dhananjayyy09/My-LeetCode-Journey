class Solution {
public:
    // memoization
    int solve(int i, vector<int> &nums, vector<int> &dp){
        int n = nums.size();
        if(i >= n) return true;
        if(dp[i] != -1) return dp[i];
        bool ans = false;
        if(i < n-1 && nums[i] == nums[i+1]){
            ans |= solve(i+2, nums, dp);
        } 
        if(i < n-2 && nums[i] == nums[i+1] && nums[i+1] == nums[i+2]){
            ans |= solve(i+3, nums, dp);
        }
        if(i < n-2 && nums[i+1] - nums[i] == 1 && nums[i+2] - nums[i+1] == 1){
            ans |= solve(i+3, nums, dp);
        }
        return dp[i] = ans;
    }

    bool validPartitionn(vector<int>& nums) {
        int n = nums.size();
        vector<int> dp(n, -1);
        return solve(0, nums, dp);
    }

    // tabulation
    bool validPartition(vector<int> &nums){
        int n = nums.size();
        vector<int> dp(n+1, 0);
        dp[n] = true;
        for(int i = n-1; i >= 0; i--){
            bool ans = false;
            if(i < n-1 && nums[i] == nums[i+1]){
                ans |= dp[i+2];
            } 
            if(i < n-2 && nums[i] == nums[i+1] && nums[i+1] == nums[i+2]){
                ans |= dp[i+3];
            }
            if(i < n-2 && nums[i+1] - nums[i] == 1 && nums[i+2] - nums[i+1] == 1){
                ans |= dp[i+3];
            }
            dp[i] = ans;
        }
        return dp[0];
    }
};
