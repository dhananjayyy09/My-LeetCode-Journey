class Solution {
public:
    int maximumEnergy(vector<int>& energy, int k) {
        int n = energy.size();
        vector<int> dp = energy;
        int maxEnergy = -1e9;
        for(int i=n-1; i>=0; i--){
            if(i+k < n){
                dp[i] += dp[i+k];
            }
            maxEnergy = max(dp[i], maxEnergy);
        }
        return maxEnergy;
    }
};
