class Solution {
public:
    int longestSubarray(vector<int>& nums) {
        int n = nums.size();
        int maxLen = 0;
        int i = 0;
        int zeros = 0;
        for(int j=0; j<n; j++){
            if(nums[j] == 0){
                zeros++;
            }
            while(zeros > 1){
                if(nums[i] == 0){
                    zeros--;
                }
                i++;
            }
            maxLen = max(maxLen, j-i+1);
        }
        return maxLen - 1;
    }
};
