class Solution {
public:
    int minOperations(vector<int>& nums) {
        int count = 0, k = 3;
        for(int i=0; i<=nums.size() - k; i++){
            if(nums[i] == 0){
                for(int j=i; j<i+k; j++){
                    nums[j] = 1- nums[j];
                }
                count++;
            }
        }

        for (int num : nums) {
            if (num == 0) return -1;
        } 
        return count;
    }
};
