class Solution {
public:
    int maxVowels(string s, int k) {
        int n = s.size();
        unordered_set<char> vowels {'a', 'e', 'i', 'o', 'u'};
        int ans = 0, vow = 0;
        int i = 0, j = 0;
        while(j < n){
            if(vowels.count(s[j])){
                vow++;
            }
            if(j-i+1 > k){
                if(vowels.count(s[i])) vow--;
                i++;
            }
            ans = max(ans, vow);
            j++;
        }
        return ans;
    }
};
