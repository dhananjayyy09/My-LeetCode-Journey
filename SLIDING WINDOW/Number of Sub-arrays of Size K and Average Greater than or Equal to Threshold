class Solution {
public:
    int numOfSubarrays(vector<int>& nums, int k, int threshold) {
        int n = nums.size();
        int count = 0, sum = 0;
        int i = 0, j = 0;
        while(j < n){
            sum += nums[j];
            if(j-i+1 == k){
                if(sum >= threshold * k){
                    count++;
                }
                sum -= nums[i];
                i++;
            }
            j++;
        }
        return count;
    }
};
