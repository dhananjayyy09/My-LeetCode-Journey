class Solution {
public:
    int numberOfSubstrings(string s) {
        int n = s.size();
        unordered_map<char, int> freq;
        int count = 0;
        int i = 0, j = 0;
        while(j < n){
            freq[s[j]]++;
            while(freq.size() == 3){
                count += n-j;
                freq[s[i]]--;
                if(freq[s[i]] == 0) freq.erase(s[i]);
                i++;
            }
            j++;
        }
        return count;
    }
};
